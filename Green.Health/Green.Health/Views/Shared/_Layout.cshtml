
<!DOCTYPE>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
    <link rel="stylesheet" href="~/Assets/CSS/main.css"/>
    <link rel="stylesheet" href="~/Assets/CSS/BootStrap/css/bootstrap.css"/>
    @RenderSection("PageSpecificStyleSheetIncludes", required: false)
</head>

<body>

<div class="green-header">
    @*@Html.Partial("_Head")*@
    @Html.Action("headlink","Common")
</div>

<div class="content">
    @RenderBody()
</div>

<div class="footer">
    @Html.Partial("_Footer")
</div>
    <script src="~/Assets/JS/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(".log-trigger").hover(function () {
            $('.u-box').show();
            $('.log-dropdown').show();
        }, function () {
            $('.u-box').hide();
            $('.log-dropdown').hide();
        })
        $("#btn_in").bind('click', function (e) {
            window.location.href = "/Login/Index";
        });
        $("#btn_out").bind('click', function (e) {
            window.location.href = "/Login/LogOut";
        });
    </script>
    @RenderSection("PageSpecificJavascriptIncludes", required: false)
</body>

</html>